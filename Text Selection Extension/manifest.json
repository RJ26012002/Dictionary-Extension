
{
    "manifest_version": 3,
    "name": "Text Popover Extensionnnnnnn",
    "version": "1.0",
    "description": "Adds a popover functionality to selected text on webpages.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon48.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  